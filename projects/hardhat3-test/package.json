{
    "name": "hardhat3-test",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "compile": "hardhat compile",
        "build": "hardhat build",
        "test": "hardhat test",
        "typecheck": "tsc --noEmit",
        "deploy:Example": "hardhat ignition deploy ignition/modules/Example.ts",
        "deploy:Example:dev": "hardhat ignition deploy ignition/modules/Example.ts --network development",
        "deploy:Example:reset": "hardhat ignition deploy ignition/modules/Example.ts --network development --reset",
        "deploy:MyToken": "hardhat ignition deploy ignition/modules/MyToken.ts --parameters ignition/parameters.json",
        "deploy:MyToken:dev": "hardhat ignition deploy ignition/modules/MyToken.ts --network development --parameters ignition/parameters.json",
        "deploy:MyToken:reset": "hardhat ignition deploy ignition/modules/MyToken.ts --network development --reset --parameters ignition/parameters.json"
    },
    "devDependencies": {
        "hardhat": "^3.0.4",
        "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
        "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
        "@nomicfoundation/hardhat-ignition": "^3.0.2",
        "@nomicfoundation/hardhat-ignition-viem": "^3.0.2",
        "@nomicfoundation/hardhat-verify": "^3.0.0",
        "@nomicfoundation/hardhat-keystore": "^3.0.0",
        "viem": "^2.37.3",
        "typescript": "~5.8.0",
        "@types/node": "^22.18.1",
        "@openzeppelin/contracts": "^5.4.0",
        "dotenv": "^17.2.2"
    }
}